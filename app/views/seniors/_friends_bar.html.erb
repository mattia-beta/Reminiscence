                <div class="span2 foto">
                    <%= link_to (image_tag senior.image_url.to_s, :size => "120x40"), senior_preview_path(senior) %>
                </div>

                <div class="span1 nome">
                    <%= senior.name %>
                </div>

            </div>
        <% end %>
